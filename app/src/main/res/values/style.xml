    <!--Custom button style-->
    <style name="PrimaryFilledButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.TitleMedium</item>
        <item name="android:textColor">@color/neutral5</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:layout_height">@dimen/button_height_56dp</item>
    </style>

    <style name="TextButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.TitleMedium</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textAppearance">@style/TextAppearance.App.TitleMedium</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/neutral5</item>
        <item name="android:layout_marginBottom">@dimen/spacing_24dp</item>
    </style>
    

    <!-- Custom text input field -->
    <style name="TextInputFilledStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_marginBottom">@dimen/spacing_24dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/border_radius_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/border_radius_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/border_radius_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/border_radius_8dp</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.App.BodySmall</item>
        <item name="helperTextTextColor">@color/neutral3</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
    </style>

    <style name="TextInputOutlinedStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">@dimen/spacing_24dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/border_radius_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/border_radius_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/border_radius_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/border_radius_8dp</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.App.BodySmall</item>
        <item name="helperTextTextColor">@color/neutral3</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="colorOnSecondaryContainer">@color/neutral5</item>
        <item name="colorOnSurface">@color/neutral5</item>
    </style>


</resources>