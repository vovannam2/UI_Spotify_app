<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Spotify_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary</item>
        <item name="colorOnPrimaryContainer">@color/neutral5</item>
        <item name="colorOnSurfaceVariant">#606881</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorOnSecondaryContainer">@color/primary</item>
        <item name="colorSurfaceContainerHighest">@color/primary_light_1</item>
        <item name="colorError">@color/accent_error</item>
        <item name="android:colorBackground">@color/neutral5</item>
        <item name="android:statusBarColor">@color/neutral5</item>
        <item name="colorSurface">#FFFDFD</item>
        <item name="colorSecondary">@color/primary_light_1</item>

        <item name="fontFamily">@font/lexend_semibold</item>
    </style>

    <style name="Theme.Spotify_app" parent="Base.Theme.Spotify_app" />

    <style name="NeutralFilledButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.TitleMedium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint">@color/primary_light_2</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.TitleMedium</item>
        <item name="boxStrokeColor">@color/neutral3</item>
        <item name="android:textColor">@color/neutral0</item>
    </style>

