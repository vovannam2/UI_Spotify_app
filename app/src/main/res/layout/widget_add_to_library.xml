<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_8dp">

    <ImageView
        android:layout_width="@dimen/image_56dp"
        android:layout_height="@dimen/image_56dp"
        android:src="@drawable/add_image_holder" />

    <TextView
        style="@style/TextAppearance.App.TitleSmall"
        android:id="@+id/tv_add_to_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_8dp" />

</LinearLayout>