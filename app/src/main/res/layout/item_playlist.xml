<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_8dp">
    
    <ImageView
        android:id="@+id/imv_user_playlist"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="@dimen/spacing_4dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_user_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/spacing_4dp"
        style="@style/TextAppearance.App.TitleMedium"/>

    <TextView
        android:id="@+id/tv_song_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/spacing_4dp"
        android:textColor="@color/neutral3"
        style="@style/TextAppearance.App.LabelMedium"/>


</LinearLayout>